<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;"> Rediger <%= mechanic.name %></h1>
        <div style="width: 300px; margin: 0 auto;">
        <form action="/mechanics/<%= mechanic._id %>/?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="mechanic[name]" value="<%= mechanic.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="mechanic[image]" value="<%= mechanic.image %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="mechanic[tel]" value="<%= mechanic.tel %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="mechanic[email]" value="<%= mechanic.email %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="mechanic[bio]" value="<%= mechanic.bio %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="mechanic[loc]" value="<%= mechanic.loc %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="mechanic[area_covered]" value="<%= mechanic.area_covered %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Rediger</button>
            </div>
        </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>